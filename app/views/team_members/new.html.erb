<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <%= render "shared/submenu"%>
  <h2>Agrega a un nuevo miembro de tu equipo aquí:</h2>

  <section class = "form-container">
    <%= bootstrap_form_for([@site, @team_member], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
      <%= f.text_field :name, label: "Nombre" %>
      <%= f.file_field :image, label: "Foto" %>
      <%= f.text_field :email, label: "Correo Electrónico"%>
      <%= f.text_field :phone, label: "Teléfono"%>
      <%= f.submit "Guardar" %>
    <% end %>
  </section>
</div>
