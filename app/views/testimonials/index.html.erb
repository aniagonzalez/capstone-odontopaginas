<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <% if current_user %>
    <%= render "shared/submenu"%>
    <h2 class="sub-header">Comentarios</h2>

    <%=link_to "Agregar nuevo comentario", new_site_testimonial_path(@site.id), class:"btn btn-primary btn-sm active padded", role:"button"%>
    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <% @testimonials.each do |testimonial| %>
          <tr>
            <td><%=testimonial.name%></td>
            <td><%=link_to "Editar", edit_site_testimonial_path(id: testimonial.id)%></td>
            <td><%= link_to "Eliminar", site_testimonial_path(id: testimonial.id), method: :delete%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>

  <% end %>
</div>
