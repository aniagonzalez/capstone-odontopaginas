<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <% if current_user %>
    <%= render "shared/submenu"%>
    <h2 class="sub-header">Galería de Imágenes</h2>
    <%= link_to "Agregar nueva imagen", new_site_gallery_picture_path(@site.id), class:"btn btn-primary btn-sm active padded", role:"button"%>

    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <% @gallery_pictures.each do |gallery_picture| %>
          <tr>
            <td><%=gallery_picture.image_thumb%></td>
            <td><%=link_to "Editar", edit_site_gallery_picture_path(id: gallery_picture.id)%></td>
            <td><%= link_to "Eliminar", site_gallery_picture_path(id: gallery_picture.id), method: :delete%></td>
          </tr>
          <%end%>
        </tbody>
      </table>
    </div>

  <% end %>
</div>
