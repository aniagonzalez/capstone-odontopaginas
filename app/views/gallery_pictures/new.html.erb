<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <%= render "shared/submenu"%>
  <h2>Agrega una nueva imagen para tu galería aquí:</h2>

  <section class = "form-container">
    <%= bootstrap_form_for([@site, @gallery_picture], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-8") do |f| %>
    <%= f.text_field :image_thumb, label: "Imagen chica" %>
    <%= f.text_field :image_large, label: "Imagen grande" %>
    <%= f.text_field :image_alt, label: "Texto alternativo"%>

    <%= f.submit "Guardar"%>
    <% end %>
  </section>
</div>
